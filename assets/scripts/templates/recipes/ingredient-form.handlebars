<div class="row ingredient-wrapper card">
  <div class="form-group ingredient-form-group">
    <div class="col-xs-6 col-md-2">
      <input class="form-control form-inline ingredient-field" name="recipe[recipe_ingredients_attributes][][quantity]" type="number" step="0.1" placeholder="Qty">
    </div>
    <div class="col-xs-6 col-md-2">
      <select class="form-control form-inline ingredient-field" name="recipe[recipe_ingredients_attributes][][ingredient_attributes][unit]">
        <option>oz</option>
        <option>gal</option>
        <option>lbs</option>
        <option>tsp</option>
        <option>tbs</option>
        <option>gram</option>
        <option>cup</option>
        <option>pkg</option>
      </select>
    </div>
    <div class="col-xs-10 col-md-7">
      <input class="form-control form-inline ingredient-field" name="recipe[recipe_ingredients_attributes][][ingredient_attributes][name]" type="text" placeholder="Ingredient">
    </div>
    <div class="col-xs-2 col-md-1">
      <button class="btn btn-danger btn-fab btn-fab-mini btn-round pull-right destroy-ingredient-btn">
        <i class="material-icons">remove</i>
      </button>
    </div>
  </div>
</div>
