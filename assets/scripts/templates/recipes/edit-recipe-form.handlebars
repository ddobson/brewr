<div class="header header-amber text-center">
  <h4>New Recipe</h4>
</div>
<div class="card-wrapper">
  <form id="edit-recipe-form" data-recipe-id="{{recipe.id}}" autocomplete="off">
    <fieldset>
      <div class="form-group required">
        <label for="recipeName">Name</label>
        <input name="recipe[name]" type="text" class="form-control" id="recipe-name" value="{{recipe.name}}">
      </div>
      <div class="form-group">
        <label for="recipeName">Image URL</label>
        <input name="recipe[image_url]" type="text" class="form-control" id="recipe-image-url" placeholder="Example: http://i.imgur.com/homebrew.jpg" value="{{recipe.image_url}}">
      </div>
      <div class="form-group">
        <label for="recipeSummary">Summary</label>
        <textarea id="recipe-summary" name="recipe[summary]" class="form-control" rows="4">{{recipe.summary}}</textarea>
      </div>
      <div class="form-group required">
        <label for="recipeInstructions">Instructions</label>
        <textarea id="recipe-instructions" name="recipe[instructions]" class="form-control" rows="6">{{recipe.instructions}}</textarea>
      </div>
      <div class="form-group">
        <label for="recipeName">ABV</label>
        <input id="recipe-abv" name="recipe[abv]" type="text" class="form-control" value="{{recipe.abv}}">
      </div>
      <div class="form-group">
        <label for="recipeName">IBU</label>
        <input id="recipe-ibu" name="recipe[ibu]" type="text" class="form-control" value="{{recipe.ibu}}">
      </div>
      <div class="form-group">
        <label for="recipeName">SRM</label>
        <input id="recipe-srm" name="recipe[srm]" type="text" class="form-control" value="{{recipe.srm}}">
      </div>
      <div class="form-group">
        <label for="recipeName">Original Gavity</label>
        <input id="recipe-original-gravity" name="recipe[original_gravity]" type="text" class="form-control" value="{{recipe.original_gravity}}">
      </div>
      <div class="form-group">
        <label for="recipeName">Final Gravity</label>
        <input id="recipe-final-gravity" name="recipe[final_gravity]" type="text" class="form-control" value="{{recipe.final_gravity}}">
      </div>
      <label for="ingredients">Ingredients</label>
      {{#each recipe.ingredients}}
        {{>edit-ingredient-form}}
      {{/each}}
      <div class="row button-control">
        <div class="col-xs-12">
          <button id="new-ingredient-btn" class="btn btn-warning btn-fab btn-fab-mini btn-round pull-right add-ingredient-btn">
          <!-- <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> -->
          <i class="material-icons">add</i>
        </button>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <button id="edit-recipe-submit-btn" class="btn btn-success btn-lg pull-right" type="submit" name="edit-recipe-submit-btn">Submit</button>
          <div class="ripple-container"></div>
        </div>
      </div>
    </fieldset>
  </form>
</div>
