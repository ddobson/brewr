<div class="panel-heading">
  <h3 class="panel-title">New Recipe</h3>
</div>
<div class="panel-body">
  <form id="new-recipe-form">
    <fieldset>
      <div class="form-group required">
        <label for="recipeName">Name</label>
        <input name="recipe[name]" type="text" class="form-control" id="recipe-name" placeholder="Name">
      </div>
      <div class="form-group required">
        <label for="recipeName">Image URL</label>
        <input name="recipe[image_url]" type="text" class="form-control" id="recipe-image-url" placeholder="Example: http://i.imgur.com/homebrew.jpg">
      </div>
      <div class="form-group">
        <label for="recipeSummary">Summary</label>
        <textarea id="recipe-summary" name="recipe[summary]" class="form-control" rows="3"></textarea>
      </div>
      <div class="form-group">
        <label for="recipeInstructions">Instructions</label>
        <textarea id="recipe-instructions" name="recipe[instructions]" class="form-control" rows="4"></textarea>
      </div>
      <div class="form-group">
        <label for="recipeName">ABV</label>
        <input id="recipe-abv" name="recipe[abv]" type="text" class="form-control" placeholder="ABV">
      </div>
      <div class="form-group">
        <label for="recipeName">IBU</label>
        <input id="recipe-ibu" name="recipe[ibu]" type="text" class="form-control" placeholder="IBU">
      </div>
      <div class="form-group">
        <label for="recipeName">SRM</label>
        <input id="recipe-srm" name="recipe[srm]" type="text" class="form-control" placeholder="SRM">
      </div>
      <div class="form-group">
        <label for="recipeName">Original Gavity</label>
        <input id="recipe-original-gravity" name="recipe[original_gravity]" type="text" class="form-control" placeholder="Original Gavity">
      </div>
      <div class="form-group">
        <label for="recipeName">Final Gravity</label>
        <input id="recipe-final-gravity" name="recipe[final_gravity]" type="text" class="form-control" placeholder="Final Gravity">
      </div>
      <label for="ingredients">Ingredients</label>
      <div class="row ingredient-wrapper">
        <hr>
        <div class="form-group">
          <div class="col-xs-2">
            <input name="recipe[recipe_ingredients_attributes][][quantity]" type="number" class="form-control form-inline ingredient-field" placeholder="Qty">
          </div>
          <div class="col-md-2">
            <select name="recipe[recipe_ingredients_attributes][][ingredient_attributes][unit]" class="form-control form-inline ingredient-field">
              <option>oz</option>
              <option>gal</option>
              <option>lb</option>
              <option>tsp</option>
              <option>tbs</option>
            </select>
          </div>
          <div class="col-md-7">
            <input name="recipe[recipe_ingredients_attributes][][ingredient_attributes][name]" type="text" class="form-control form-inline ingredient-field" placeholder="Ingredient">
          </div>
        </div>
      </div>
      <hr>
      <div class="row button-control">
        <div class="col-xs-12">
          <button id="new-ingredient-btn" class="btn btn-success pull-right">
          <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        </button>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-xs-12">
          <button id="new-recipe-submit-btn" class="btn btn-primary btn-lg pull-right" type="submit" name="new-recipe-submit-btn">Submit</button>
        </div>
      </div>
    </fieldset>
  </form>
</div>
